{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@environments/*": ["./src/environments/*"],
      "@core/*": ["./src/app/core/*"],
      "@assets/*": ["./src/app/assets/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}